{
  "name": "millmedia-tribune-r1",
  "description": "MillMedia custom Tripoli for The Tribune r1",
  "demo": "https://tripoli.aspirethemes.com/",
  "docs": "https://aspirethemes.com/docs/tripoli",
  "version": "1.0.8",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "keywords": [
    "ghost-theme"
  ],
  "scripts": {
    "postinstall": "bower install"
  },
  "dependencies": {
    "bower": "^1.8.14",
    "evil-icons": "^1.10.1",
    "fslightbox": "^3.4.1",
    "install": "^0.13.0",
    "modern-normalize": "^2.0.0",
    "prismjs": "^1.29.0",
    "sass-mq": "^6.0.0",
    "tocbot": "^4.21.3"
  },
  "devDependencies": {
    "concat": "^3.0.0",
    "fs": "^0.0.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-jshint": "^2.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-rtlcss": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "jshint": "^2.13.6",
    "jshint-stylish": "^2.2.1",
    "run-sequence": "^2.2.1",
    "sass": "^1.66.1"
  },
  "author": {
    "name": "Aspire Themes",
    "email": "ahmad@aspirethemes.com",
    "url": "https://aspirethemes.com/"
  },
  "config": {
    "custom": {
      "enable_search": {
        "type": "boolean",
        "default": true
      },
      "enable_post_access_label": {
        "type": "boolean",
        "default": true
      },
      "enable_post_card_excerpt": {
        "type": "boolean",
        "default": true
      },
      "enable_dark_mode": {
        "type": "boolean",
        "default": false
      },
      "dark_mode_accent_color": {
        "type": "color",
        "default": "#F0A45C"
      },
      "dark_mode_publication_logo": {
        "type": "image"
      },
      "date_format": {
        "type": "select",
        "options": [
          "Month - Day - Year",
          "Day - Month - Year",
          "Year - Month - Day",
          "Hide Date"
        ],
        "default": "Day - Month - Year"
      },
      "instagram_page": {
        "type": "text",
        "default": "https://www.instagram.com/sheffieldtrib/"
      },
      "bluesky_page": {
        "type": "text",
        "default": "https://bsky.app/profile/sheffieldtribune.bsky.social"
      },      
      "homepage_writers": {
        "type": "text",
        "group": "homepage",
        "default": "dan-hayes,victoria-munro,mollie"
      },      
      "homepage_cta_headline": {
        "type": "text",
        "group": "homepage",
        "default": "Join The Tribune"        
      },      
      "homepage_cta_copy": {
        "type": "text",
        "group": "homepage" ,
        "default": "By joining our free mailing list, you will get fascinating local stories and useful recommendations in your inbox every week, all produced by our team of independent journalists."        
      }, 
      "homepage_q1_copy": {
        "type": "text",
        "group": "homepage",
        "default": "Really enjoying the long-form stories in the Sheffield Tribune. If like me you want a deeper understanding of what's going on in Sheffield and are keen to support local journalism, you can subscribe too."
      },
      "homepage_q1_name": {
        "type": "text",
        "group": "homepage",
        "default": "Mark Ansell"        
      },
      "homepage_q2_copy": {
        "type": "text",
        "group": "homepage" ,
        "default": "Sheffield needs a supportive yet critical voice and the traditional media model is seemingly no longer able to provide that on a consistent basis. I look forward to seeing what The Tribune can achieve as it continues to grow."        
      },
      "homepage_q2_name": {
        "type": "text",
        "group": "homepage" ,
        "default": "David Coleman"        
      },                   
      "popup_cta": {
        "type": "text",
        "group": "homepage"    ,
        "default": "Welcome to our new website. If you're already a member, put your e-mail in again to read all our articles"        
      },
      "share_cta": {
        "type": "text",
        "group": "homepage" ,
        "default": "Share this story to help us grow- click here"        
      },    
      "number_of_editors_picks_posts": {
        "type": "text",
        "default": "3",
        "group": "homepage"
      },    
    "tag_slugs_for_home_sections": {
      "type": "text",
      "group": "homepage",
      "default": "investigation,culture,nature,history"        
      }
    },
    "card_assets": {
      "exclude": [
        "button",
        "blockquote",
        "bookmark",
        "image",
        "gallery"
      ]
    },
    "posts_per_page": 16,
    "image_sizes": {
      "profile-image": {
        "width": 384
      },
      "feature-image": {
        "width": 652
      },
      "feature-image-large": {
        "width": 1304
      }
    }
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  }
}
 