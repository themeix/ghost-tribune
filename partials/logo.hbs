<div class='c-logo'>
  {{#if @custom.enable_dark_mode}}
    <div class='c-logo__dark'>
      {{#if @custom.dark_mode_publication_logo}}
        <a href='{{ @site.url }}' class='u-block'>
          <img class='c-logo__img' src='{{ @custom.dark_mode_publication_logo }}' alt='{{ @site.title }}' width='' height=''>
        </a>
      {{ else if @site.logo}}
        <a href='{{ @site.url }}' class='u-block'>
          <img class='c-logo__img' src='{{ @site.logo }}' alt='{{ @site.title }}' width='' height=''>
        </a>
      {{else}}
        <a class='c-logo__link' href='{{ @site.url }}'>{{ @site.title }}</a>
      {{/if}}
    </div>
  {{/if}}

  <div class='c-logo__light'>
    {{#if @site.logo}}
      <a href='{{ @site.url }}' class='u-block'>
        <img class='c-logo__img' src='{{ @site.logo }}' alt='{{ @site.title }}' width='' height=''>
      </a>
    {{else}}
      <a class='c-logo__link' href='{{ @site.url }}'>{{ @site.title }}</a>
    {{/if}}
  </div>
</div>
